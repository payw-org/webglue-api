{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "lib": ["dom", "es5", "es2015"],
    "allowJs": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "Helpers/*": ["src/app/helpers/*"]
    },
    "types": ["node"],
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "vendor"]
}
